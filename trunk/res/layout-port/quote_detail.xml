<?xml version="1.0" encoding="UTF-8"?>
<RelativeLayout
android:id="@+id/quote_detail_view"
android:layout_width="fill_parent"
android:layout_height="wrap_content"

xmlns:android="http://schemas.android.com/apk/res/android"
>


<LinearLayout
android:id="@+id/row0"
android:layout_marginTop="5px"
android:layout_marginBottom="5px"
android:layout_marginLeft="10px"
android:layout_alignParentTop="true" 
android:layout_width="fill_parent"
android:layout_height="wrap_content"
android:layout_alignParentLeft="true"
android:orientation="horizontal"
>
<TextView
android:id="@+id/current"
android:layout_width="140dip"
android:layout_height="wrap_content"
android:textSize="30dip"
android:singleLine="true"
android:typeface="sans"
android:gravity="left"
android:textStyle="bold"
android:editable="false"
>
</TextView>
<TextView
android:id="@+id/change"
android:layout_width="140dip"
android:layout_height="wrap_content"
android:textSize="30dip"
android:singleLine="true"
android:typeface="sans"
android:gravity="right"
android:textStyle="bold"
android:editable="false"
>
</TextView>
</LinearLayout>

<LinearLayout
android:id="@+id/row1"
android:layout_below="@id/row0"
android:layout_width="fill_parent"
android:layout_height="wrap_content"
android:layout_marginLeft="10px"
android:orientation="horizontal"
>
<TextView
android:id="@+id/open_label"
android:layout_width="60dip"
android:layout_height="fill_parent"
android:gravity="left"
android:layout_marginRight="5px"
android:text="Open:"
android:singleLine="true"
android:typeface="sans"
android:editable="false"
>
</TextView>
<TextView
android:id="@+id/open"
android:layout_width="75dip"
android:layout_height="fill_parent"
android:singleLine="true"
android:gravity="left"
android:typeface="sans"
android:editable="false"
>
</TextView>
<TextView
android:id="@+id/volume_label"
android:layout_marginRight="5px"
android:layout_width="60dip"
android:layout_height="fill_parent"
android:gravity="right"
android:text="Volume:"
android:singleLine="true"
android:typeface="sans"
android:editable="false"
>
</TextView>
<TextView
android:id="@+id/volume"
android:layout_width="75dip"
android:layout_height="fill_parent"
android:singleLine="true"
android:gravity="right"
android:typeface="sans"
android:editable="false"
>
</TextView>
</LinearLayout>



<LinearLayout
android:id="@+id/row2"
android:layout_below="@id/row1"
android:layout_width="fill_parent"
android:layout_height="wrap_content"
android:layout_marginLeft="10px"
android:orientation="horizontal"
>
<TextView
android:id="@+id/day_low_label"
android:layout_width="60dip"
android:layout_height="fill_parent"
android:gravity="left"
android:layout_marginRight="5px"
android:text="Day Low:"
android:singleLine="true"
android:typeface="sans"
android:editable="false"
>
</TextView>
<TextView
android:id="@+id/day_low"
android:layout_width="75dip"
android:layout_height="fill_parent"
android:singleLine="true"
android:gravity="left"
android:typeface="sans"
android:editable="false"
>
</TextView>
<TextView
android:id="@+id/day_high_label"
android:layout_marginRight="5px"
android:layout_width="60dip"
android:layout_height="fill_parent"
android:gravity="right"
android:text="Day Hi:"
android:singleLine="true"
android:typeface="sans"
android:editable="false"
>
</TextView>
<TextView
android:id="@+id/day_high"
android:layout_width="75dip"
android:layout_height="fill_parent"
android:singleLine="true"
android:gravity="right"
android:typeface="sans"
android:editable="false"
>
</TextView>
</LinearLayout>


<LinearLayout
android:id="@+id/row3"
android:layout_below="@id/row2"
android:layout_width="fill_parent"
android:layout_height="wrap_content"
android:layout_marginLeft="10px"
android:orientation="horizontal"
>
<TextView
android:id="@+id/wk_52_low_label"
android:layout_width="60dip"
android:layout_height="fill_parent"
android:gravity="left"
android:layout_marginRight="5px"
android:text="52wk Lo:"
android:singleLine="true"
android:typeface="sans"
android:editable="false"
>
</TextView>
<TextView
android:id="@+id/wk_52_low"
android:layout_width="75dip"
android:layout_height="fill_parent"
android:singleLine="true"
android:gravity="left"
android:typeface="sans"
android:editable="false"
>
</TextView>
<TextView
android:id="@+id/wk_52_high_label"
android:layout_marginRight="5px"
android:layout_width="60dip"
android:layout_height="fill_parent"
android:gravity="right"
android:text="52wk Hi:"
android:singleLine="true"
android:typeface="sans"
android:editable="false"
>
</TextView>
<TextView
android:id="@+id/wk_52_high"
android:layout_width="75dip"
android:layout_height="fill_parent"
android:singleLine="true"
android:gravity="right"
android:typeface="sans"
android:editable="false"
>
</TextView>
</LinearLayout>

<LinearLayout
android:id="@+id/row4"
android:layout_below="@id/row3"
android:layout_marginTop="5dip"
android:layout_width="fill_parent"
android:layout_height="wrap_content"
android:layout_marginLeft="10px"
android:orientation="horizontal"
>
<ImageView
android:id="@+id/chart_view"
android:layout_width="fill_parent"
android:layout_height="wrap_content"
>

</ImageView>
</LinearLayout>


<RelativeLayout
android:id="@+id/row5"
android:layout_below="@id/row4"
android:layout_width="fill_parent"
android:layout_marginTop="5dip"
android:layout_marginRight="15dip"
android:layout_marginLeft="15dip"
android:layout_height="65dip"
android:orientation="horizontal"
>

 <Button
      	android:id="@+id/delete"
    	android:layout_height="wrap_content"
    	android:layout_width="wrap_content"
    	android:layout_alignParentLeft="true"
    	android:layout_alignParentBottom="true" 
    	android:text="@string/delete"
     />	

 <Button
      	android:id="@+id/close"
    	android:layout_height="wrap_content"
    	android:layout_width="wrap_content"
    	android:layout_alignParentRight="true"
    	android:layout_alignParentBottom="true" 
    	android:text="@string/close"
     />	

</RelativeLayout>

</RelativeLayout>
